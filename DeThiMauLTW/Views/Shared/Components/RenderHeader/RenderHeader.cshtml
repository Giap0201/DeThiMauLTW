@model IEnumerable<LoaiHang>
<div class="header_bottom">
    <div class="menu">
        <ul>
            <li class="active"><a href="#">NGUYỄN HỮU GIÁP</a></li>
            @foreach (var item in Model)
            {
                <li><a href="#" data-id ="@item.MaLoai" class="loai_hang">@item.TenLoai</a></li>
            }
            <div class="clear"></div>
        </ul>
    </div>
    <div class="search_box">
        <form>
            <input type="text" id="searchtuviet" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
            <input type="button" class="tuviet" value="">
        </form>
    </div>
    <div class="clear"></div>
</div>
