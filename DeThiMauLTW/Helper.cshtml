@section Scripts {
    <script>
        $(document).ready(function () {
            // --- PHẦN 1: CLICK MENU LOẠI HÀNG ---
            $(document).on("click", ".loai_hang", function (e) {
                e.preventDefault();
                var maLoai = $(this).data("id");

                $.ajax({
                    url: '@Url.Action("GetHangHoa", "BaiThi")',
                    type: 'GET',
                    data: { maLoai: maLoai },
                    success: function (response) {
                        // Chú ý: Đảm bảo class .render hoặc .section.group khớp với HTML
                        $('.render').html(response);
                    },
                    error: function () {
                        alert("Lỗi tải dữ liệu loại hàng!");
                    }
                });
            });

            // --- PHẦN 2: CLICK TÌM KIẾM ---
            $(".tuviet").click(function(e){
                e.preventDefault();

                // Lấy từ khóa từ ô input (Kiểm tra lại id bên HTML có đúng là searchtuviet không)
                var tenHang = $("#searchtuviet").val();

                // SỬA LỖI: Phải là $.ajax (có dấu chấm)
                $.ajax({
                    url: '/BaiThi/FilterByName', // Hoặc '@Url.Action("FilterByName", "BaiThi")'
                    type: 'GET',
                    data: { name: tenHang }, // Tên tham số phải khớp với Controller
                    success: function(response){
                        $('.render').html(response);
                    },
                    error: function(){
                        alert("Lỗi tìm kiếm!");
                    }
                }); // Đóng ajax
            }); // Đóng sự kiện click
        }); // Đóng document ready
    </script>
} *@
